#include<bits/stdc++.h>
using namespace std;
int main()
{
    int x, y;
    double price, total;
    cin >> x >> y;
    cout << fixed << setprecision(2);

    if(x == 1)
        {
            price = 4.00;

            total = y * price;

            cout << "Total: R$ " << total << endl;
        }
    else if(x == 2)
        {
            price = 4.50;

            total = y * price;

            cout << "Total: R$ " << total << endl;
        }
    else if(x == 3)
        {
            price = 5.00;

            total = y * price;

            cout << "Total: R$ " << total << endl;
        }
    else if(x == 4)
        {
            price = 2.00;

            total = y * price;

            cout << "Total: R$ " << total << endl;
        }
    else if(x == 5)
        {
            price = 1.50;

            total = y * price;

            cout << "Total: R$ " << total << endl;
        }

    return 0;
}
