#include<stdio.h>
int main()
{
    int n, i, j, x, y;
    scanf("%d", &n);

    for(i = 1; i <= n; i++)
    {
        scanf("%d%d", &x, &y);
        int sum = 0;
        j = x;

        while(j < (x+(y*2)))
        {
            if(j % 2 != 0)
            {
                sum = sum + j;
            }

            j++;
         }

         printf("%d\n", sum);
    }

    return 0;
}
